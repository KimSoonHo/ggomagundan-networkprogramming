<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout
        android:id="@+id/connectlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
         
        <TextView
	android:id="@+id/tv_name"

	android:layout_width="250dp"
	android:layout_height="wrap_content"
	android:textSize="20px"
	android:text="Please Connect!!"/>  
         
	
         <Button
        android:id="@+id/b_connect"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Connect" />

      
        
	</LinearLayout>
        
    


<EditText
android:id="@+id/et_latitude"
android:layout_below="@id/connectlinear"
android:layout_marginTop="5dp"
android:layout_width="150dp"
android:layout_height="wrap_content"
android:hint="latitude"/>

<EditText
android:id="@+id/et_longitude"
android:layout_below="@id/connectlinear"
android:layout_toRightOf="@id/et_latitude"
android:layout_marginTop="5dp"
android:layout_width="150dp"
android:layout_height="wrap_content"
android:hint="latitude"/>

<Button
android:id="@+id/b_go"
android:layout_below="@id/et_latitude"
android:layout_marginTop="5dp"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text=" Get Nearby Places "/>


<LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_below="@id/b_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
       
         >
    

<SeekBar
    android:id="@+id/seekbar"
android:layout_width="250dp"
    android:layout_height="wrap_content"


    />

<TextView 
    android:id = "@+id/count"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="Count : "
    />

</LinearLayout>

    <ListView
android:id="@+id/lv_places"
android:layout_below="@id/linearLayout1"
android:layout_marginTop="5dp"
android:layout_width="fill_parent"
android:layout_height="wrap_content"/>

    

</RelativeLayout>